{
  "name": "@form8ion/repository-settings",
  "description": "form8ion plugin for managing configuration for the repository-settings app for a project",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.14.0"
  },
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org)",
  "repository": "form8ion/repository-settings",
  "bugs": "https://github.com/form8ion/repository-settings/issues",
  "homepage": "https://npm.im/@form8ion/repository-settings",
  "runkitExampleFilename": "./example.js",
  "exports": "./lib/index.mjs",
  "main": "./lib/index.mjs",
  "sideEffects": false,
  "scripts": {
    "lint:publish": "publint --strict",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "prepack": "run-s build",
    "pregenerate:md": "run-s build",
    "test:unit": "cross-env NODE_ENV=test c8 run-s test:unit:base",
    "test:unit:base": "DEBUG=any vitest run",
    "lint:lockfile": "lockfile-lint",
    "lint:sensitive": "ban",
    "prepare": "husky install",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "run-s 'lint:js -- --fix'",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:peer": "npm ls >/dev/null",
    "pretest:integration:base": "run-s build",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "NODE_OPTIONS=--enable-source-maps DEBUG=any cucumber-js test/integration",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:wip:debug": "DEBUG=test run-s 'test:integration:wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'",
    "lint:gherkin": "gherkin-lint --config=.gherkin-lintrc.json",
    "pretest": "run-s build",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "lint:engines": "ls-engines"
  },
  "files": [
    "example.js",
    "lib/"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.4.0+sha512.759091a21ee805d9c842bcfe2878d6626c48a16a5ca73c1e1338fa8379951abfc2d273ec4ad12ede64bd294237c6719b3bcc518118d1affe8a38985fe5d29773",
  "dependencies": {
    "@form8ion/core": "^4.3.0",
    "lodash.uniqby": "^4.7.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.3.0",
    "@form8ion/commitlint-config": "2.0.6",
    "@form8ion/eslint-config": "7.0.12",
    "@form8ion/eslint-config-cucumber": "1.4.1",
    "@form8ion/eslint-config-vitest": "1.0.0",
    "@form8ion/remark-lint-preset": "6.0.7",
    "@octokit/core": "7.0.2",
    "@travi/any": "3.1.2",
    "ban-sensitive-files": "1.10.8",
    "c8": "10.1.3",
    "chai": "5.2.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.4",
    "husky": "9.1.7",
    "js-yaml": "4.1.0",
    "lockfile-lint": "4.14.1",
    "ls-engines": "0.9.3",
    "mock-fs": "5.5.0",
    "msw": "2.8.4",
    "npm-run-all2": "8.0.3",
    "publint": "0.3.12",
    "remark-cli": "12.0.1",
    "remark-toc": "9.0.0",
    "remark-usage": "11.0.1",
    "rimraf": "6.0.1",
    "rollup": "4.40.2",
    "rollup-plugin-auto-external": "2.0.0",
    "vitest": "3.1.4",
    "vitest-when": "0.6.0"
  },
  "peerDependencies": {
    "@octokit/core": "^6.1.5 || ^7.0.0"
  }
}
